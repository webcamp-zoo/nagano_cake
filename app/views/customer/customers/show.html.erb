<div class="container">
	<div class="row">
		<h2 class="pagetitle">マイページ</h2>
	</div>
	<div class="row">
		<div class="col-xs-6">
				<div class="pull-left">
					<h3 class="subtitle">登録情報</h3>
				</div>
				<div class="pull-right">
					<%= link_to edit_customer_customers_path(@customer) do %>
					<button type="button" class="btn btn-warning col-xs-4 mypage-btn1">編集する</button>
					<% end %>
					<%= link_to edit_customer_registration_path do %>
					<button type="button" class="btn btn-warning col-xs-8 mypage-btn">パスワードを変更する</button>
					<% end %>
				</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6">
			<table class="table mypage-table">
				<tbody>
					<tr>
						<th class="table-head warning">氏名</th><td><%= @customer.full_name %></td>
					</tr>
					<tr>
						<th class="table-head warning">カナ</th><td><%= @customer.full_name_kana %></td>
					</tr>
					<tr>
						<th class="table-head warning">郵便番号</th><td><%= @customer.postal_code %></td>
					</tr>
					<tr>
						<th class="table-head warning">住所</th><td><%= @customer.address %></td>
					</tr>
					<tr>
						<th class="table-head warning">電話番号</th><td><%= @customer.phone_number %></td>
					</tr>
					<tr>
						<th class="table-head warning">メールアドレス</th><td><%= @customer.email %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6">
			<div class="pull-left">
				<h3 class="subtitle">配送先</h3>
			</div>
			<div class="pull-right">
				<%= link_to	customer_addresses_path do %>
					<button type="button" class="btn btn-warning col-xs-12 mypage-btn">一覧を見る</button>
				<% end %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-6">
			<div class="pull-left">
				<h3 class="subtitle">注文履歴</h3>
			</div>
			<div class="pull-right">
				<%= link_to customer_orders_path do %>
					<button type="button" class="btn btn-warning col-xs-12 mypage-btn">一覧を見る</button>
				<% end %>
			</div>
		</div>
	</div>
</div>
