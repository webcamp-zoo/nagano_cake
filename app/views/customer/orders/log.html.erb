<div class="container">
    <div class="row">
        <h2 class="pagetitle">注文情報確認</h2>
    </div>
    <div class="row">
        <div class="col-xs-7">
            <table class="table table table-bordered">
                <thead>
                    <tr>
                        <th class="table-head warning">商品名</th>
                        <th class="table-head warning">単価（税込み）</th>
                        <th class="table-head warning">数量</th>
                        <th class="table-head warning">小計</th>
                    </tr>
                </thead>

                <% sum = 0 %>
                    <tbody>
                        <% @cart_products.each do |cart_product| %>
                            <tr>
                                <td><%= cart_product.product.name  %></td>
                                <td><%= ((cart_product.product.price * 1.1).round(2)).ceil.to_s(:delimited) %>円</td>
                                <td><%= cart_product.quantity %></td>
                                <td><%= (((cart_product.product.price * 1.1).round(2)).ceil * cart_product.quantity).to_s(:delimited) %>円</td>
                            </tr>
                            <% sum += ((cart_product.product.price * 1.1).round(2)).ceil * cart_product.quantity %>
                        <% end %>
                    </tbody>
            </table>
        </div>
        <div class="col-xs-5">
            <table class="table table table-bordered">
                <tbody>
                    <tr>
                        <th class="table-head warning">送料</th>
                        <td>800円</td><%#= shipping_cost %>
                    </tr>
                    <tr>
                        <th class="table-head warning">商品合計</th>
                        <td><%= sum.to_s(:delimited) %>円</td>
                    </tr>
                    <tr>
                        <th class="table-head warning">請求金額</th>
                        <td><%= (sum + 800).to_s(:delimited) %>円</td>
                    </tr>
                </tbody>
            </table>
            <table class="table table table-bordered">
                <tbody>
                    <tr>
                        <th class="table-head warning">お支払い方法</th>
                        <td><%= @order.payment_method %></td>
                    </tr>
                    <tr>
                        <th class="table-head warning">お届け先</th>
                        <td><%= @order.postal_code %><br>
                            <%= @order.address %><br>
                            <%= @order.name %></td>
                    </tr>
                </tbody>
            </table>
            <%= form_with(url:customer_orders_path, method: :post, local: true) do |f| %>

            <%= f.hidden_field :customer_id, value: current_customer.id %>
            <%= f.hidden_field :payment_method, value: @order.payment_method %>
            <%= f.hidden_field :total_price, value: sum %>
            <%= f.hidden_field :name, value: @order.name %>
            <%= f.hidden_field :address, value: @order.address %>
            <%= f.hidden_field :postal_code, value: @order.postal_code %>

            <%= f.submit "購入を確定する", class: "btn btn-success"%>
        <% end %>
        </div>
    </div>
</div>
