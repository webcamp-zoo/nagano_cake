<div class="container">
	<div class="row">
		<h2 class="pagetitle">注文履歴詳細</h2>
	</div>
	<div class="row">
		<div class="col-xs-6">
			<table class="table table-bordered">
				<h3 class="subtitle">注文情報</h3>
				<tbody>
					<tr>
						<td class="table-head warning">注文日</td>
						<td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
					</tr>
					<tr>
						<td class="table-head warning">配送先</td>
						<td><%= @order.postal_code %><br>
			                <%= @order.address %><br>
			                <%= @order.name %><br></td>
			        </tr>
			        <tr>
						<td class="table-head warning">支払い方法</td>
						<td><%= @order.payment_method %></td>
					</tr>
					<tr>
						<td class="table-head warning">ステータス</td>
						<td><%= @order.status %></td>
					</tr>
				</tbody>
			</table>
		</div>

		<div class="col-xs-6">
			<table class="table table-bordered">
			<h3 class="subtitle">請求情報</h3>
				<tbody>
					<tr>
						<td class="table-head warning">商品合計</td>
						<td class="text-right"><%= @order.total_price.to_s(:delimited) %>円</td>
					</tr>
					<tr>
						<td class="table-head warning">配送料</td>
						<td class="text-right">800円</td>
					</tr>
					<tr>
						<td class="table-head warning">ご請求額</td>
						<td class="text-right"><%= ((@order.total_price + 800 * 1.1).round(2)).ceil.to_s(:delimited) %>円</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>


	<table class="table table-bordered">
	<h3 class="subtitle">注文内容</h3>
		<tbody>
	  	    <tr>
	  	      	<td class="table-head warning">商品</td>
	  	        <td class="table-head warning">単価(税込)</td>
	  	      	<td class="table-head warning">個数</td>
	  	      	<td class="table-head warning">小計</td>
	  	    </tr>
	        <% @order_products.each do |order_product| %>
	        <tr>
	  	        <td><%= order_product.product.name %></td>
	  	        <td class="text-right"><%= ((order_product.product.price * 1.1).round(2)).ceil.to_s(:delimited) %>円</td>
	  	        <td><%= order_product.quantity %></td>
	  	        <td class="text-right"><%= ((order_product.product.price * 1.1).round(2)).ceil * order_product.quantity %>円</td>
	        </tr>
	        <% end %>
	    </tbody>
	</table>

</div>

