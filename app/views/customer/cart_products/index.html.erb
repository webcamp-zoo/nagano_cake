<div class="container">

	<h2 class="pagetitle">
		ショッピングカート	<span><%= link_to "カートを空にする", customer_cart_products_path, method: :delete, class: "btn btn-danger btn-md pull-right" %></span>
	</h2>
	<table class="table">
		<thead>
			<tr>
				<th class="table-head warning">商品名</th>
				<th class="table-head warning">単価(税込)</th>
				<th class="table-head warning">数量</th>
				<th class="table-head warning">小計</th>
				<th class="table-head warning"></th>
			</tr>
		</thead>
		<tbody>
			<% sum = 0 %>
			<% @cart_products.each do |cart_product| %>
				<tr>
					<td><%#= attachment_image_tag(cart_product.product, :image, :fill, 100, 60, fallback: "no_image.jpg") %>
						<span class="table-product-name"><%= cart_product.product.name %></span></td>
					<td><%= ((cart_product.product.price * 1.1).round(2)).ceil.to_s(:delimited) %></td>
					<td><%= form_for(cart_product, url: customer_cart_product_path(cart_product.id)) do |f| %>
						<%= f.text_field :quantity %>
						<%= f.hidden_field :product_id, value: cart_product.product.id %>
						<%= f.submit "変更", class: "btn btn-default" %>
						<% end %>
					</td>
					<td><%= ((cart_product.product.price * cart_product.quantity.to_i * 1.1).round(2)).ceil.to_s(:delimited) %></td>
					<td><%= link_to "削除する", customer_cart_product_path(cart_product.id), method: :delete, class: "btn btn-danger" %>
					</td>
				</tr>
				<% sum += cart_product.product.price * cart_product.quantity.to_i %>
			<% end %>
		</tbody>
	</table>
		<div class="row">
			<%= link_to "買い物を続ける",customer_products_top_path, class: "btn btn-warning col-xs-2" %>
			<div class="col-xs-offset-6  col-xs-4">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th class="warning">合計金額</th>
							<td><%= sum.ceil.to_s(:delimited) %></td>
						</tr>
					</thead>
				</table>
			</div>
		</div>

	<div class="row">
			<%= link_to "情報入力へ進む",new_customer_order_path, class: "btn btn-warning btn-lg col-xs-offset-5 col-xs-2"%>
		</div>
	</div>
</div>