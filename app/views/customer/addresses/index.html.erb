<div class="container">
    <h2>配送先登録/一覧</h2>
	<%= form_with :model => @address, url:customer_addresses_path, method: :post, local: true  do |f| %>
		<div class="field row">
			<%= f.label :郵便番号 %><span>(ハイフンなし)</span><br />
			<%= f.text_field :postal_code %>
		</div>

		<div class="field row">
			<%= f.label :住所 %><br />
			<%= f.text_field :address %>
		</div>

		<div class="field row">
			<%= f.label :宛名 %><br />
			<%= f.text_field :name %>
		</div>
		<div class="actions row"><br />
			<div class="col-xs-12">
				<%= f.submit :登録する, class: "btn btn-success" %>
			</div>
		</div>
    <% end %>
</div>

<div class="container">
    <table class="table table-bordered">
		<thead>
			<tr>
				<th>郵便番号</th>
				<th>住所</th>
				<th>宛名</th>
				<th></th>
			</tr>
		</thead>
        <tbody>
        	<% @addresses.each do |address| %>
		    	<tr>
			        <td><%= address.postal_code %></td>
				    <td><%= address.address %></td>
				    <td><%= address.name %></td>
				    <td>
		                <%= link_to '編集する', edit_customer_address_path(address), class: 'btn-sm btn-primary' %>
				    	<%= link_to '削除する', customer_address_path(address), class: 'btn-sm btn-danger', method: :delete %>
				    </td>
				</tr>
			<% end %>
		</tbody>
    </table>
</div>

