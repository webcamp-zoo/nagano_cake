<div class="container">
	<div class="row">
    	<h2 class="pagetitle">配送先編集</h2>
    </div>

    <div class="row">
    	<%= form_with :model => @address, url:customer_address_path, method: :patch, local: true, class:"form-horizontal" do |f| %>
		  <div class="form-group">
		    <label class="control-label col-xs-2 subtitle">郵便番号(ハイフンなし):</label>
		    <div class="col-xs-10">
		      <%= f.text_field :postal_code, class: "col-xs-3" %>
		    </div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-xs-2 subtitle">住所:</label>
		    <div class="col-xs-10">
		      <%= f.text_field :address, class: "col-xs-6" %>
		  	</div>
		  </div>
		  <div class="form-group">
		    <label class="control-label col-xs-2 subtitle">宛名:</label>
		    <div class="col-xs-10">
		      <%= f.text_field :name, class: "col-xs-3" %>
		      <%= f.submit :編集する, class: "btn btn-success col-xs-offset-5 col-xs-2" %>
		    </div>
		  </div>
		<% end %>
	</div>
</div>