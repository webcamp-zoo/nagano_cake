<div class="container">

    <h2>配送先編集</h2>

        <%= form_for(@address, :url => {:action => :update}) do |f| %>

			<div class="field row">
				<%= f.label :郵便番号 %><span>(ハイフンなし)</span><br />
				<%= f.text_field :postal_code %>
			</div>

			<div class="field row">
				<%= f.label :住所 %><br />
				<%= f.text_field :address %>
			</div>

			<div class="field row">
				<%= f.label :宛名 %><br />
				<%= f.text_field :name %>
			</div>

			<div class="actions row"><br />
				<div class="col-xs-12">
				<%= f.submit :編集する, class: "btn btn-primary" %>
			    </div>
			</div>

        <% end %>
</div>