<h2>注文履歴詳細</h2>

	<table>
        <tr>
            <th>購入者</th>
            <td><%= @order.name %></td>
        </tr>
        <tr>
            <th>配送先</th>
            <td><%= @address %></td>
        </tr>
        <tr>
            <th>支払い方法</th>
            <td><%= @order.payment_method %></td>
        </tr>
        <tr>
            <th>注文ステータス</th>
            <td><%= form_for(@order, url: admin_order_path, method: :patch) do |f| %>
			        <%= f.select :status, Order.statuses.keys %>
			        <%= f.submit '更新' %>
			    <% end %></td>
        </tr>
	</table>

	<table>
	    <thead>
	        <tr>
	          <th>商品名</th>
	          <th>単価（税込）</th>
	          <th>数量</th>
	          <th>小計</th>
	          <th>製作ステータス</th>

	        </tr>
	    </thead>
		<tbody>
		<% @order_products.each do |order_product| %>
			<tr>
	            <td>
	              <%= order_product.product.name %>
	            </td>
	            <td>
	              <%= order_product.taxed_price %>円
	            </td>
	            <td>
	              <%= order_product.quantity %>
	            </td>
	            <td>
	              <%= order_product.taxed_price * order_product.quantity %>円
	            </td>
	            <td><%= form_for(order_product, url: admin_order_product_path(order_product), method: :patch) do |f| %>
	            	<%= f.select :making_status, OrderProduct.making_statuses.keys %>
	            	<%= f.submit '更新' %>
	            </td>
	            <% end %>
	      	</tr>
		<% end %>
		</tbody>
	</table>

	<table>
		<tr>
    		<th>商品合計</th>
			<td><%= @order.total_price %>円</td>
		</tr>
		<tr>
			<th>送料</th>
			<td><%= @order.shipping_cost %>円</td>
		</tr>
		<tr>
			<th>請求金額合計</th>
			<td><%= @order.total_price += @order.shipping_cost %>円</td>
		</tr>
    </table>


