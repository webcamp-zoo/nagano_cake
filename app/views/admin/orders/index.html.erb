<h2>注文履歴一覧</h2>

	<table>
		<thead>
		    <tr>
		    	<th>購入日時</th>
	      		<th>購入者</th>
		    	<th>注文個数</th>
		    	<th>注文ステータス</th>
		    </tr>
		</thead>

		<tbody>
		  <% @orders.each do |order| %>
		    <tr>
		        <td>
		          <%= link_to admin_order_path(order) do %>
		          	<%= order.created_at %>
		          <% end %>
		        </td>
		        <td>
		          <%= @customers.find(order.customer_id).first_name + @customers.find(order.customer_id).last_name %>
		        </td>
		        <td>
		        	<% sum = 0 %>
		        　<% order.order_products.each do |order_product| %>
		        	<%#= order_product.product.name %>
		        	<% sum += order_product.quantity %>
		          <% end %>
		          <%= sum %>
		        </td>
    	        <td>
    	      	  <%= order.status %>
     	        </td>
     	    </tr>
		  <% end %>
		</tbody>
	</table>


