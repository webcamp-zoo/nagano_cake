<h2>ジャンル編集</h2>

<%= form_for [:admin, @genre] do |f| %>

	<% if @genre.errors.any? %>
	  <div>
	    <ul style="color: red">
	      <% @genre.errors.full_messages.each do |message| %>
	        <li>error : <%= message %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>


	<div>
		<%= f.label :name, "ジャンル" %>
		<%= f.text_field :name %>
		<%= f.label :is_active, "有効", {is_active: :true} %>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "無効", {is_active: :false} %>
        <%= f.radio_button :is_active, false %>
		<%= f.submit "変更を保存する" %>
	</div>
<% end %>