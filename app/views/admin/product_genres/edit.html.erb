
<div class="container">



<h2>ジャンル編集</h2>


<%= render "layouts/error_messages", model: @genre %>


<%= form_with :model => @genre, url:admin_product_genre_path, method: :patch, local: true  do |f| %>



	<div>
		<%= f.label :name, "ジャンル" %>
		<%= f.text_field :name %>
		<%= f.label :is_active, "有効", {is_active: :true} %>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "無効", {is_active: :false} %>
        <%= f.radio_button :is_active, false %>
		<%= f.submit "変更を保存する" %>
	</div>
<% end %>
</div>