<h2>ジャンル一覧・追加</h2>

<%= form_for [:admin, @genre] do |f| %>

	<% if @genre.errors.any? %>
	  <div>
	    <ul style="color: red">
	      <% @genre.errors.full_messages.each do |message| %>
	        <li>error : <%= message %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>


	<div>
		<%= f.label :name, "ジャンル" %>
		<%= f.text_field :name %>
		<%= f.label :is_active, "有効", {is_active: :true} %>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "無効", {is_active: :false} %>
        <%= f.radio_button :is_active, false %>
		<%= f.submit "追加" %>
	</div>
<% end %>

<table>
    <thead>
        <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
            <td><%= genre.name%></td>

            <% if genre.is_active == true %>
               <td>有効</td>
            <% elsif genre.is_active == false %>
               <td>無効</td>
            <% end %>
            <td><%= link_to "編集する", edit_admin_product_genre_path(genre) %></td>
        </tr>
      <% end %>
    </tbody>
</table>