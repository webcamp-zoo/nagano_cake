
<div class="container">

<h2>ジャンル一覧・追加</h2>

<%= render "layouts/error_messages", model: @genre %>



<%= form_with :model => @genre, url:admin_product_genres_path, method: :post, local: true  do |f| %>




	<div>
		<%= f.label :name, "ジャンル" %>
		<%= f.text_field :name %>
		<%= f.label :is_active, "有効", {is_active: :true} %>
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, "無効", {is_active: :false} %>
        <%= f.radio_button :is_active, false %>
		<%= f.submit "追加" %>
	</div>
<% end %>

<table class="table table-hover table-inverse">

    <thead>
        <tr>
            <th>ジャンル</th>
            <th>状態</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
            <td><%= genre.name%></td>

            <% if genre.is_active == true %>
               <td>有効</td>
            <% elsif genre.is_active == false %>
               <td>無効</td>
            <% end %>
            <td><%= link_to "編集する", edit_admin_product_genre_path(genre) %></td>
        </tr>
      <% end %>
    </tbody>
</table>
</div>