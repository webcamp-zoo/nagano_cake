<div class="container">
  <h3>新規会員登録</h3>
  <form class="form-horizontal">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/customers/shared/error_messages", resource: resource %>

      <div class="field row">
        <label class="control-label col-xs-2">名前</label>
        <div class="col-xs-1"><%= f.label "(姓)" %></div>
          <div class="col-xs-9">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
            <%= f.label "(名)" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          </div>
      </div>

      <div class="field row">
        <label class="control-label col-xs-2">フリガナ</label>
        <div class="col-xs-1"><%= f.label "(セイ)" %></div>
          <div class="col-xs-9">
            <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
            <%= f.label "(メイ)" %>
            <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
          </div>
      </div>

      <div class="field row">
        <label class="control-label col-xs-2">メールアドレス</label>
        <div class="col-xs-offset-1 col-xs-9">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="field row">
        <label class="control-label col-xs-2">郵便番号(ハイフンなし)</label>
        <div class="col-xs-offset-1 col-xs-9">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>
      </div>

      <div class="field row">
        <label class="control-label col-xs-2">住所</label>
        <div class="col-xs-offset-1 col-xs-9">
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
      </div>

      <div class="field row">
        <label class="control-label col-xs-2">電話番号(ハイフンなし)</label>
        <div class="col-xs-offset-1 col-xs-9">
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
        </div>
      </div>

      <div class="field row">
        <label class="control-label col-xs-2">パスワード(6字以上)</label>
<!--
        <%# if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <%# end %><br />
-->
        <div class="col-xs-offset-1 col-xs-9">
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="field row">
        <label class="control-label col-sm-2">パスワード(確認用)</label>
        <div class="col-xs-offset-1 col-xs-9">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="actions row">
        <%= f.submit "新規登録", class:"btn btn-warning col-xs-offset-5 col-xs-2" %>
      </div>
    <% end %>
  </form>
  <div class="row">
    <h3>既に登録済みの方</h3>
    <%= render "devise/customers/shared/links" %>
    <p>からログインしてください。</p>
  </div>
</div>